<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/onlineCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:outlineSpotShadowColor="#73424242"
    android:elevation="5dp"
    app:cardBackgroundColor="#99656565">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/imgSongImageCardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        app:cardCornerRadius="180dp">

        <ImageView
            android:id="@+id/imgSongOnline"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/music_image"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtSongName"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:text="song1"
        android:layout_toRightOf="@+id/imgSongImageCardView"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSongName"
            android:text="5:00"
            android:layout_toRightOf="@+id/imgSongImageCardView"
            android:textColor="@color/pinkOp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>